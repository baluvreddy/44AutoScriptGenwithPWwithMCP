{
  "servers": {
    "playwright": {
      "type": "stdio",
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--browser=chromium",  // Or "firefox" / "webkit"
        "--headless=false",     // Set to false for visible debugging
        "--viewport=1920,1080",
        "--config=./mcp-config.json"  // Optional: See below
      ],
      "gallery": true,       // Enables snapshot previews in some clients
      "version": "0.0.1"     // Your local version
    }
  },
  "inputs": []  // For future input handling
}